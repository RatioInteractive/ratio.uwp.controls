                        <Border x:Name="focusVisual" Grid.Column="1" Grid.Row="0" BorderThickness="{TemplateBinding FocusVisualPrimaryThickness}" BorderBrush="{TemplateBinding FocusVisualPrimaryBrush}" IsHitTestVisible="False" Opacity="0"/>
                        <ContentPresenter x:Name="leftPresenter" Grid.Column="0" Grid.Row="0"/>
                        <ContentPresenter x:Name="rightPresenter" Grid.Column="2" Grid.Row="0"/>
                        <Button x:Name="leftButton" Grid.Column="0" Grid.Row="0" Style="{TemplateBinding LeftButtonStyle}" Content="{TemplateBinding LeftButtonContent}" Opacity="0" IsHitTestVisible="False" IsTabStop="False"/>
