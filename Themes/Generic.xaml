                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="False"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rightButton" Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="False"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="ButtonsShowing">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="leftButton" Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="True"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rightButton" Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="True"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="leftButton" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="rightButton" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.Resources>
                            <CubicEase x:Name="FadeInEase" EasingMode="EaseIn"/>
                            <!-- Note: Visibility of focusVisual is not toggled because playing the storyboard to hide focusVisual when a direct manipulation starts -->
                            <!-- causes the scrollviewer to pull back momentarily. -->
                            <Storyboard x:Name="FocusVisualEntrance">
                                <DoubleAnimation Storyboard.TargetName="focusVisual" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1" EasingFunction="{StaticResource FadeInEase}"/>
                            </Storyboard>
                            <Storyboard x:Name="FocusVisualExit">
                                <DoubleAnimation Storyboard.TargetName="focusVisual" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.1" EasingFunction="{StaticResource FadeInEase}"/>
                            </Storyboard>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{TemplateBinding LeftButtonContainerWidth}"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="{TemplateBinding RightButtonContainerWidth}"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

